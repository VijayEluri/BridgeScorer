<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/MainLayout" xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="fill_parent">

<TextView android:id="@+id/HandCountLabel" android:text="(1)" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:layout_width="45dp" android:layout_height="65dp" android:gravity="center"></TextView>

<RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/NSTotal" android:layout_alignParentLeft="true" android:layout_toLeftOf="@id/HandCountLabel"><TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/North" android:text="North" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:background="#F00"></TextView>
<TextView android:layout_below="@id/North" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/NSScore" android:layout_centerHorizontal="true" android:textSize="24px" android:text="0"></TextView>
<TextView android:layout_below="@id/NSScore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/South" android:text="South" android:layout_centerHorizontal="true"></TextView>
</RelativeLayout>

<FrameLayout android:layout_below="@+id/NSTotal" android:layout_height="wrap_content" android:id="@+id/ScoringFrame" android:layout_width="480px" android:layout_centerHorizontal="true">
  <include android:id="@+id/ContractLayout" layout="@layout/contract"/>
  <include android:id="@+id/PointsLayout" layout="@layout/points" android:visibility="gone"/>
  <include android:id="@+id/ResultLayout" layout="@layout/result" android:visibility="gone"/>
</FrameLayout><ListView android:layout_below="@+id/ScoringFrame" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_height="wrap_content" android:id="@+id/HistoryListView"></ListView><RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/EWTotal" android:layout_alignParentRight="true" android:layout_toRightOf="@id/HandCountLabel">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/East" android:text="East" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"></TextView>
<TextView android:layout_below="@id/East" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/EWScore" android:layout_centerHorizontal="true" android:textSize="24px" android:text="0"></TextView>
<TextView android:layout_below="@id/EWScore" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/West" android:text="West" android:layout_centerHorizontal="true"></TextView>
</RelativeLayout>





</RelativeLayout>
