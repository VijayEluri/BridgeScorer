<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
<TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:id="@+id/PartnerShipPointsLabel" android:text="Bid-winning Partnership Points:" android:focusable="false"></TextView>
<EditText android:layout_below="@+id/PartnerShipPointsLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerHorizontal="true" android:id="@+id/PartnershipPointsEditText" android:inputType="phone" android:focusable="true"></EditText>
<Button android:layout_below="@+id/PartnershipPointsEditText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true" android:text="OK" android:id="@+id/PointsOKButton"></Button><Button android:layout_below="@+id/PartnershipPointsEditText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/BackButton" android:text="Back" android:layout_alignParentLeft="true"></Button>

</RelativeLayout>
